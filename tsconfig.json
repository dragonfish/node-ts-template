{
	"extends": [
		"@tsconfig/node-lts/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"outDir": "build",
		"sourceMap": true,
		"removeComments": true,
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": false
	},
	"compileOnSave": true,
	"include": ["src", "test"]
}
